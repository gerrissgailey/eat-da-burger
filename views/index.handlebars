<div class="jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger!</h1>
      <div class="row">
        <div class="col">
          <div class="card">

            <h2>Burgers to be devoured</h2>
              <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
              </ul>
              <h2>Add a burger</h2>
              <form id="create-form">
                <div class="form-group">
                  <label for="br">Burger Name:</label>
                  <input type="text" id="br" name="burgername">
                </div>
                {{!-- <div class="form-group">
                  <label for="devoured">Devoured?</label><br>
                  <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
                  <input type="radio" name="devoured" value="0" id="not-devoured"> Not Devoured!
                </div> --}}
                <button type="submit">Add Burger</button>
              </form>
          </div>

        </div>
        <div class="col">
          <div class="card">
            <h2>Burgers that were devoured!</h2>
              <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
                {{/each}}
              </ul>
          </div>
        </div>
      </div>
  </div>
</div>



